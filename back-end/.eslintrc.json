{
    "root": true,
    "env": {
        "browser": false,
        "node": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "standard",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "camelcase": "warn",
        "arrow-parens": [
            2, 
            "always"
        ],
        "semi": [
            2,
            "always"
        ],
        "quotes": [
            2,
            "single"
        ],
        "implicit-arrow-linebreak": "off",
        "consistent-return": "off",
        "object-curly-newline": "off",
        "max-params": [
            "error",
            4
        ],
        "max-len": [
            "error",
            100,
            {
                "ignoreComments": true
            }
        ],
        "complexity": [
            "error",
            5
        ]
    }
}
